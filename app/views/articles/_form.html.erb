<% if @article.errors.any? %>
<h2>The following errors prevented the article from being saved</h2>
<ul>
    <% @article.errors.full_messages.each do |msg| %>
       <li> <%= msg %> </li>
        <% end %>
        </ul>
<% end %>

<div class="row justify-content-center">
<div class="col-10">
<%= form_with(model: @article, class: "shadow-lg p-3 mb-3 bg-info rounded", local: true)  do |f| %>

    <div class="form-group">
    <%= f.label :title, class: "text-light"%><br/>
    <%= f.text_field :title, class: "form-control", placeholder: "Sample Title" %>
    </div>

    <div class="form-group">
    <%= f.label :description, class: "text-light" %><br/>
    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Sample description" %>
    </div>
    </div>
    </div>
  
    <div class="form-group row justify-content-center">
    <%= f.submit class: "btn btn-success" %>
    </div>
    <% end %>
    <div class="form-group row justify-content-center">
    <%= link_to 'Cancel and return to articles page', articles_path, class: "btn btn-danger"%>
    </div>
 



