<h1 class="text-center mt-4 mb-4"><%= @article.title %></h1>

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-9 mt-4">
            <div class="card text-center shadow-lg mb-5 bg-white rounded">
                <div class="card-header font-italic">
                 by <%= @article.user.username%>
                </div>
                <div class="card-body">
                <div class="card-text text-left"><%= simple_format(@article.description) %></div>
                <% if logged_in? && @article.user == current_user %>
                    <%= link_to "Edit", edit_article_path(@article.id), class: "btn btn-primary"%>
                    <%= link_to "Delete", article_path(@article.id), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"} %>
                <% end %>
                </div>
                <div class="card-footer text-muted">
                    <small> Created <%= time_ago_in_words(@article.created_at)%> ago, 
                    Edited <%= time_ago_in_words(@article.updated_at)%> ago</small>
                </div>
            </div>
        </div>
    </div>
</div>

