<h1 class="text-center mt-4 mb-4">Create New Category</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
        <%= render 'shared/errors', obj: @category %>
            <%= form_with(model: @category, class: "shadow-lg p-3 mb-3 bg-info rounded", local: true)  do |f| %>

                <div class="form-group">
                    <%= f.label :name,"Category Name", class: "text-light"%><br/>
                    <%= f.text_field :name, class: "form-control", placeholder: "Sample Category Name" %>
                </div>

                <div class="form-group row justify-content-center">
                <%= f.submit class: "btn btn-success btn-lg" %>
                </div>
                    <% end %>
                <div class="row justify-content-center">
                    <div class="mb-3">
                        <%= link_to 'Cancel and return to articles page', articles_path, class: "btn btn-danger"%>
                    </div>
                </div>
        </div>
</div>