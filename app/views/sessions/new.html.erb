<h1 class="text-center mt-4 mb-4">Sign up for Alpha Blog</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= form_with(scope: :session, url: login_path, class: "shadow-lg p-3 mb-3 bg-info rounded", local: true)  do |f| %>

                <div class="form-group">
                    <%= f.label :username, class: "text-light"%><br/>
                    <%= f.text_field :username, class: "form-control", placeholder: "Enter Your Username" %>
                </div>

                <div class="form-group">
                <%= f.label :password, class: "text-light"%><br/>
                <%= f.password_field :password, class: "form-control", placeholder: "Enter your Password" %>
                </div>

                <div class="form-group row justify-content-center">
                <%= f.submit "Log In", class: "btn btn-success btn-lg" %>
                </div>
                    <% end %>
                <div class="row justify-content-center">
                    <div class="mb-3">
                        <%= link_to 'Cancel and return to articles page', articles_path, class: "btn btn-danger"%>
                    </div>
                </div>
        </div>
</div>
 
