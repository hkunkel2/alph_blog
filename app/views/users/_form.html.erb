<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
        <%= render 'shared/errors', obj: @user %>
            <%= form_with(model: @user, class: "shadow-lg p-3 mb-3 bg-info rounded", local: true)  do |f| %>

                <div class="form-group">
                    <%= f.label :username, class: "text-light"%><br/>
                    <%= f.text_field :username, class: "form-control", placeholder: "Sample Username" %>
                </div>

                <div class="form-group">
                    <%= f.label :email, class: "text-light" %><br/>
                    <%= f.email_field :email, class: "form-control", placeholder: "Sample@example.com" %>
                </div>

                <div class="form-group">
                <%= f.label :password, class: "text-light"%><br/>
                <%= f.password_field :password, class: "form-control", placeholder: "Sample Password" %>
                </div>

                <div class="form-group row justify-content-center">
                <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-success btn-lg") %>
                </div>
                    <% end %>
                <div class="row justify-content-center">
                    <div class="mb-3">
                        <%= link_to 'Cancel and return to articles page', articles_path, class: "btn btn-danger"%>
                    </div>
                </div>
        </div>
</div>
 
